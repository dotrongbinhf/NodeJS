<div class="mt-4">
    <h3>Đăng khóa học</h3>

    <form method="POST" action="/courses/store">
        <div class="mb-3">
            <label for="name">Tên khóa học</label>
            <input type="text" id="name" class="form-control" name="name">
        </div>

        <div class="mb-3">
            <label for="description">Mô tả</label>
            <input type="text" id="description" class="form-control" name="description">
        </div>

        <div class="mb-3">
            <label for="level">Trình độ</label>
            <input type="text" id="level" class="form-control" name="level">
        </div>
        
        <div class="mb-3">
            <label for="videoId">Video Id</label>
            <input type="text" id="videoId" class="form-control" name="videoId">
        </div>

        <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    </form>
</div>